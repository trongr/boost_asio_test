#include <iostream>
#include <boost/asio.hpp>
#include <boost/date_time/posix_time/posix_time.hpp>

using namespace std;

void print(const boost::system::error_code&)
{
    std::cout << "Hello, world!" << std::endl;

    boost::asio::io_service io;
    boost::asio::deadline_timer t2(io, boost::posix_time::seconds(10));
    cout << "sync waiting" << endl;
    t2.wait();
    std::cout << "sync waiting done!" << std::endl;

}

int main(){
    boost::asio::io_service io;
    boost::asio::deadline_timer t(io, boost::posix_time::seconds(5));

    cout << "async waiting" << endl;
    t.async_wait(&print);

    // this won't return until the async_wait and the print callback
    // finishes
    io.run();
    cout << "io.run returned" << endl;

    return 0;
}
